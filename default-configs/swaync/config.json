{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "timeout": 5,
  "timeout-low": 2,
  "timeout-critical": 8,
  "fit-to-screen": true,
  "control-center-width": 500,
  "control-center-height": 600,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-window-width": 494,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": ["title", "notifications", "mpris", "buttons-grid"],
  "widget-config": {
    "title": {
      "text": " Notification Center",
      "clear-all-button": true,
      "button-text": " Clear All"
    },
    "label": {
      "max-lines": 1,
      "text": " Notification Center"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 7
    },
    "buttons-grid": {
      "actions": [
        {
          "label": " ",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && wpctl set-mute @DEFAULT_AUDIO_SINK@ 1 || wpctl set-mute @DEFAULT_AUDIO_SINK@ 0'",
          "update-command": "sh -c '[[ $(wpctl get-volume @DEFAULT_AUDIO_SINK@) == *MUTED* ]] && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && swaync-client -dn || swaync-client -df'",
          "update-command": "sh -c '[[ $(swaync-client -D) == \"true\" ]] && echo true || echo false'"
        },
        {
          "label": "",
          "command": "swaylock"
        },
        {
          "label": "",
          "command": "swaymsg exit"
        },
        {
          "label": "",
          "command": "reboot"
        },
        {
          "label": "",
          "command": "poweroff"
        }
      ]
    }
  }
}
